<% include ../partials/header %>
<div class="login">
  <div class="login-triangle"></div>
        <h1 class="login-header">Edit <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">

                    <input type="text" name="campground[name]" value="<%= campground.name %>">

                    <input type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step= "0.01" >

                    <input type="text" name="campground[image]" value="<%= campground.image %>">

                    <input type="text" name="campground[description]" value="<%= campground.description %>">

                    <input type="submit" value="Submit">

            </form>
            <button><a href="/campgrounds">Go Back</a></button>
</div>
<% include ../partials/footer %>

